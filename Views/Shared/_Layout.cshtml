<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pizza Restaurant</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <style>
        /* 🌶️ Red background */
        body {
            background-color: #b30000; /* Deep red background */
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: #800000 !important; /* Dark red */
        }

        /* Hero banner with pizza image */
        .hero {
            background-image: url('https://images.unsplash.com/photo-1601924582971-dc54b6b1b8ab?auto=format&fit=crop&w=1600&q=80');
            background-size: cover;
            background-position: center;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-shadow: 2px 2px 6px rgba(0,0,0,0.8);
            border-bottom: 4px solid #ffcc00;
        }

            .hero h1 {
                font-size: 3rem;
                background-color: rgba(0,0,0,0.5);
                padding: 10px 20px;
                border-radius: 8px;
            }

        /* Card for content */
        .card {
            background-color: #fff;
            color: #000;
            border-radius: 10px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.2);
        }

        footer {
            color: #f0f0f0;
        }

        a.btn, button.btn {
            border-radius: 6px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">🍕 Pizza Restaurant</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Order Pizza</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/OrderHistory">Order History</a></li>
                    
                </ul>
            </div>
        </div>
    </nav>

    <!-- 🍕 Hero Section with Pizza Image -->
    <div class="hero">
        <h1>Freshly Baked Pizzas Just for You!</h1>
    </div>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center mt-4 mb-3">
        <hr class="border-light" />
        <p>© 2025 Pizza Restaurant — Built with ASP.NET Core MVC</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
        <a class="navbar-brand fw-bold" href="/Home/Home">🍕 Pizza Restaurant</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="/Home/Home">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/Index">Order Pizza</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/OrderHistory">Order History</a></li>
            </ul>
        </div>
    </div>
</nav>

